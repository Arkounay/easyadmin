<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <a href="{{ path('main_homepage', {"_locale": "fr"}) }}" class="{{ app.request.locale == 'fr' ? 'active' : 'disabled' }}">FR</a>
    <a href="{{ path('main_homepage', {"_locale": "en"}) }}" class="{{ app.request.locale == 'en' ? 'active' : 'disabled' }}">EN</a>
    {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
